<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/hotensv"
        tools:text="Nguyen Van A"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/hotensv"
        android:layout_below="@+id/hotensv"
        tools:text="1990"
        android:textSize="25sp"
        android:id="@+id/namsinhsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnEdit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="Edit"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/quequansv"
        android:layout_alignTop="@id/namsinhsv"
        tools:text="tp Hồ Chí Minh"
        android:textSize="25sp"
        android:layout_alignEnd="@id/btnEdit"
        android:layout_below="@id/hotensv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#000000"
        android:layout_below="@id/namsinhsv"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</RelativeLayout>